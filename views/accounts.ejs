<html>
<meta name="viewport" content="width=device-width" />
<head>
    <title>Funds</title>
    <link rel="stylesheet" href="/lib/foundation/css/foundation.min.css"/>
    <link rel="stylesheet" href="/style/funds.css"/>
    <link rel="stylesheet" href="/style/accounts.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
</head>
<body>
    <% include navbar %>
    <div class="row">
        <h4 class="subtitle">
            My Accounts:
        </h4>
    </div>
    <div class="row">
        <div class="large-12 small-12 columns">
            <% accounts.forEach(function(account) { %>
            <a class="account" href="/accounts/<%= account._id %>/transactions">
                <% if(account.type === "checking"){ %>
                <img class="account_type_image" src="/images/credit.png"/>
                <% } %>
                <% if(account.type === "savings"){ %>
                <img class="account_type_image" src="/images/savings.png"/>
                <% } %>
                <%= account.name %>
            </a>
            <% }); %>
        </div>
    </div>
    <% if(accounts.length <1) { %>
    <div class="row">
        <div class="large-12 small-12 columns">
            You don't seem to own any accounts! try adding some:
        </div>
    </div>
    <% } %>
    <form method="POST" action="/setup_account">
        <div class="row">
            <div class="large-6 small-12 columns">
                <div class="row account_form">
                    <div class="large-8 small-12 columns">
                        <input  type="text" placeholder="account name" name="name"/>
                    </div>
                    <div class="large-4 small-12 columns">
                        <input type="submit"class="button prefix success" value="+add account"/>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <h4 class="subtitle">Shared Accounts:</h4>
    </div>
    <div class="row">
        <div class="large-12 small-12 columns">
            <% shared_accounts.forEach(function(account) { %>
            <a class="account" href="/accounts/<%= account.id %>/transactions">
                <% if(account.type === "checking"){ %>
                <img class="account_type_image" src="/images/credit.png"/>
                <% } %>
                <% if(account.type === "savings"){ %>
                <img class="account_type_image" src="/images/savings.png"/>
                <% } %>
                <%= account.name %>
            </a>
            <% }); %>
        </div>
    </div>
    <% if(shared_accounts.length <1) { %>
    <div class="row">
        <div class="large-12 small-12 columns">
            Noone has shared an account with you! try making some friends.
        </div>
    </div>
    <% } %>
</body>
</html>
