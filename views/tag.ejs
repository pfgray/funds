<html>
<meta name="viewport" content="width=device-width" />
<head>
    <title>Funds</title>
    <!--<link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.css" type="text/css" media="all" /> -->
    <link rel="stylesheet" href="/lib/foundation/css/foundation.min.css"/>
    <link rel="stylesheet" href="/style/funds.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
    <!--<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>-->
    <script src="/script/funds.js"></script>
</head>
<body>
    <% include navbar %>
        <div class="row">
            <div class="large-8 small-12 columns">
                <h3>Total spent on <div class="tag"><%= tag %></div> for <%= moment().format("MMM")%>:
                    <% if(total < 0) { %>
                        <span class="negative amount">-$<%= total*-1 %></span>
                    <% } else { %>
                        <span class="positive amount">$<%= total %></span>
                    <% } %>
                </h3>
            </div>
        </div>
        <div class="row">
                <div class="large-12 small-12 columns">
                <% transactions.forEach(function(trans) { %>
                <div class="transaction">
                    <% if(trans.amount < 0) { %>
                        <span class="negative amount">-$<%= trans.amount*-1 %></span>
                    <% } else { %>
                        <span class="positive amount">+$<%= trans.amount %></span>
                    <% } %>
                    <div class="tags">
                    <% trans.tags.forEach(function(currentTag) { %>
                        <div class="tag"> <%= currentTag %> </div>
                    <% }); %>
                    </div>
                </div>
                <% }); %>
                </div>
        </div>
</body>
</html>
